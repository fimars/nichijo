---
import { ViewTransitions } from "astro:transitions";

import BaseHead, {
  type Props as HeadProps,
} from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Background from "../components/Background.astro";
// import Header from "../components/Header.astro";
// import Nav from "../components/Nav.astro";

export type Props = HeadProps & { showHeader?: boolean };

const { showHeader = true, ...head } = Astro.props;
---

<!doctype html>
<html lang="zh" class="dark antialiased break-words">
  <head>
    <BaseHead {...head} />
    <script>
      if (localStorage.theme === "dark") {
        document.documentElement.classList.add("dark");
      }
    </script>
    <ViewTransitions />
  </head>
  <body class="bg-main text-main">
    <div class="flex flex-col min-h-screen px-4 md:px-8">
      <!-- <Nav /> -->
      <!-- {showHeader && <Header />} -->
      <Background />
      <div class="md:pl-[10vw] lg:pl-[40vw] md:py-12 md:pb-32 py-4">
        <main
          class="grow w-full max-w-2xl mx-auto bg-compare p-4 md:p-12 md:py-24 shadow-lg"
        >
          <slot />
        </main>
      </div>
    </div>
    <Footer />
  </body>
</html>
