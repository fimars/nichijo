---
import { ViewTransitions } from "astro:transitions";

import BaseHead, {
  type Props as HeadProps,
} from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FixedBackground from "../components/FixedBackground.astro";

export type Props = HeadProps & { showHeader?: boolean };

const { ...head } = Astro.props;
---

<!doctype html>
<html lang="zh" class="dark antialiased break-words">
  <head>
    <BaseHead {...head} />
    <script>
      if (localStorage.theme === "dark") {
        document.documentElement.classList.add("dark");
      }
    </script>
    <ViewTransitions />
  </head>
  <body class="bg-main text-main">
    <div class="flex flex-col min-h-screen px-0 md:px-8">
      <FixedBackground />
      <div class="md:pl-[10vw] lg:pl-[40vw] md:py-12 md:pb-32 py-0">
        <main
          class="grow w-full max-w-2xl mx-auto bg-compare p-8 md:p-12 min-h-screen md:min-h-[90vh] relative"
        >
          <slot />
        </main>
      </div>
    </div>
    <Footer />
  </body>
</html>
